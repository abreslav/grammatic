group ParserMembers;

main(fields, poolVars, modules) ::= <<
<fields:{
    private <it.field.type> <it.field.name>;}
>

    public void setModuleImplementations(
    	<fields:{<it.constructorParameter.type> <it.constructorParameter.name>}; separator=", \n">
	) {
		<poolVars:{this.<it.field.name> = new <it.provider.poolsClassName>(<it.constructorParameter.name>);}; separator="\n">
		<modules:{this.<it.field.name> = <it.constructorParameter.name>;}; separator="\n">
    }

    public void displayRecognitionError(String[] tokenNames,
            RecognitionException e) {
		String hdr = getErrorHeader(e);
		String msg = getErrorMessage(e, tokenNames);
		super.displayRecognitionError(tokenNames, e);
		throw new IllegalArgumentException(hdr + " " + msg, e);
    }

>>;