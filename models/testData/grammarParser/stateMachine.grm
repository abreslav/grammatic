stateMachine
  : "statemachine" Name "{" state* "}"
  ;

state
  : "start"? "end"? "state" Name "{" action* "}";

action
  : "case" Int ":" Name ";"
  ;

@token Int : Digit+;
@helper Digit : ['0'-'9'];

@token Name : NameStartCharacter NameCharacter*;
@helper NameCharacter : NameStartCharacter | Digit;
@helper NameStartCharacter : ['A'-'Z'] | ['a'-'z'] | '_';

@whitespace WS : ['\u0000'-'\u0020'] ;